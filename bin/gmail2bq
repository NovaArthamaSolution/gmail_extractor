#!/bin/bash

# set -x
set -eo pipefail


DIR_SANDBOX="$(cd $(dirname $0); pwd)"
REPO_ROOT=`realpath ${DIR_SANDBOX}/..`
export DIR_WORKING="${REPO_ROOT}"

cd ${DIR_WORKING}

ls -al
set -o allexport
source .app.conf
set +o allexport

gcloud auth activate-service-account --key-file=$GOOGLE_APPLICATION_CREDENTIALS
gcloud config set project data-gojek-access

echo $@
echo ${@:2}

f=$1
if [ ! -f $1 ]; then
    if [ -f $1/config.yaml ]; then
        f=$1/config.yaml
    fi
fi

python3 ${DIR_WORKING}/lib/gmail2bq.py "$f" ${@:2}

## cleanup
rm -rf tmp/
rm -rf /tmp/gmail_extractor*
